CREATE TABLE  "EMPLOYEE" 
   (	"EMPLOYEEID" NUMBER NOT NULL ENABLE, 
	"EMPLOYEENAME" VARCHAR2(4000), 
	"EMPLOYEEROLE" VARCHAR2(4000), 
	"EMPLOYEEPASSWORD" VARCHAR2(4000), 
	 CONSTRAINT "EMPLOYEE_PK" PRIMARY KEY ("EMPLOYEEID") ENABLE
   );
   
   
   CREATE TABLE  "DISH" 
   (	"DISHID" NUMBER, 
	"DISHNAME" VARCHAR2(4000), 
	"ISVEG" VARCHAR2(4000), 
	"AVAILABILITY" NUMBER, 
	"COST" NUMBER, 
	 CONSTRAINT "DISH_PK" PRIMARY KEY ("DISHID") ENABLE
   )
/

CREATE TABLE  "ORDERS" 
   (	"ORDERID" NUMBER, 
	"WAITERID" NUMBER, 
	"NUMBEROFCUSTOMERS" NUMBER, 
	"TABLENUMBER" NUMBER, 
	"ISREADY" VARCHAR2(4000), 
	"COMMETS" VARCHAR2(4000), 
	 CONSTRAINT "ORDERS_PK" PRIMARY KEY ("ORDERID") ENABLE, 
	 CONSTRAINT "ORDERS_FK" FOREIGN KEY ("WAITERID")
	  REFERENCES  "EMPLOYEE" ("EMPLOYEEID") ENABLE
   )
/
   CREATE TABLE  "ORDERITEMS" 
   (	"ORDERID" NUMBER, 
	"ITEMID" NUMBER, 
	"QUANTITY" NUMBER, 
	 CONSTRAINT "ORDERITEMS_PK" PRIMARY KEY ("ORDERID", "ITEMID") ENABLE, 
	 CONSTRAINT "ORDERITEMS_FK" FOREIGN KEY ("ORDERID")
	  REFERENCES  "ORDERS" ("ORDERID") ENABLE, 
	 CONSTRAINT "ORDERITEMS_FK2" FOREIGN KEY ("ITEMID")
	  REFERENCES  "DISH" ("DISHID") ENABLE
   )
/